.menu.u-full-width
  .container
    .row
      .three.columns
        .menu--logo.eight.columns

        .menu--logo-text.four.columns
          = I18n.t('menu.logo.after')
      %ul.menu--list.six.columns.u-pull-right
        - data.menu.each do |item|
          - if item.sub_menu
            %li.menu--list-item.has-subs.three.columns
              = link_to item.title, item.path
              %ul.menu--sub-list.twelve.columns
                - item.sub_menu.each do |project|
                  %li.menu--sub-list-item= link_to project.title, project.path
          - else
            %li.menu--list-item.three.columns= link_to item.title, item.path
